
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option packet_steering '1'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth0'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.0.4'
	option netmask '255.255.255.0'
	option delegate '0'
	option ip6ifaceid '::1'
	option ip6hint '10'
	list ip6class 'DMZ6'
	option ip6assign '60'

config interface 'DMZ'
	option proto 'dhcp'
	option device 'eth1'
	option delegate '0'

config interface 'DMZ6'
	option proto 'dhcpv6'
	option device 'eth1'
	option reqaddress 'try'
	option reqprefix '56'
	option sourcefilter '0'

config route
	option interface 'DMZ'
	option target '0.0.0.0/0'
	option gateway '192.168.179.1'

config route6
	option target '::/0'
	option interface 'DMZ6'
	option gateway 'fe80::de15:c8ff:fef4:bb8d'

config interface 'internal'
	option proto 'none'
	option device 'netmaker'

